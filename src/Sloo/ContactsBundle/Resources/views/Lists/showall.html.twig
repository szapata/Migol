{% extends 'MigolCommonPagesBundle:Private:indexTemplate.html.twig' %}
{% block scripts%}
    {{ parent() }}
<script>
  var saveListURL = '{{ url('SlooContactsBundle_saveList') }}';
  var deleteListURL = '{{ url('SlooContactsBundle_deleteList') }}';
  var dashboardURL = '{{url('MigolCommonPagesBundle_dashboard')}}';
  var initialList = new Array();
  {% for list in lists %}
      initialList.push({
                id: '{{ list.id }}',
                name:   '{{ list.name }}'
      });
  {% endfor %}
</script>
{% endblock scripts%}
{% block secondCol %}
<div class="span9 margin-top-standard">
    <div class="row">
        <div class="span5">
            <h1>{{ 'lists'|trans }}</h1>
        </div>
        <div class="span4">
            <a href="javascript:void(0);" data-controls-modal="new-list" data-backdrop="static" class="btn">{{'create.new.list'|trans}}</a>
        </div>
    </div>
    <div id="user-lists">
        

    
    </div>   
        <!-- Modal Lists -->
        <div id="new-list" class="modal hide fade in">
            <div class="modal-header">
                <a href="javascript:void(0);" class="close">x</a>
                <h3>{{'create.new.list' | trans }}</h3>
            </div>
            <div class="modal-body">
               <input type="text" id="newlist" class="span4" placeholder="{{'new.list'|trans }}"/>
               <a href="javascript:void(0);" class="btn success" id="addlist">{{'save.list'|trans }}</a><span id="list-error" class="help-inline red-text"></span>
            </div>
            <div class="modal-footer">
                
            </div>
        </div>
        <!-- End Modal Lists -->
   
</div>
{% endblock secondCol %}
{% block backbone%}
<script src="{{ asset('bundles/sloocontacts/js/manageAllLists.js') }}" type="text/javascript"></script>
{% endblock %}